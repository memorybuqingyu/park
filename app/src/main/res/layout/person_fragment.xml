<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/person_tv3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/person_tv2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="55dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/person_tv4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/person_tv3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="55dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="停车记录"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/person_tv5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/person_tv4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="55dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="我的预约"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/person_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="166dp"
        app:srcCompat="@mipmap/conunt" />

    <TextView
        android:id="@+id/person_tv1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="175dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/person_tv2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/person_tv1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="55dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="个人信息"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/person_btn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_below="@+id/person_tv5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="97dp"
        android:text="退出登录" />

</RelativeLayout>
