<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/register_top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="注册"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="378dp"
        android:layout_height="500dp"
        android:layout_below="@+id/register_top"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/register_tv_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/register_edit6"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="已有账号，立即登录" />

        <EditText
            android:id="@+id/register_edit6"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_img"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="44dp"
            android:layout_toEndOf="@+id/textView8"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="32dp"
            android:text="用户名：" />

        <EditText
            android:id="@+id/register_edit1"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/textView"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入用户名"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="28dp"
            android:text="密码：" />

        <EditText
            android:id="@+id/register_edit2"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="73dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/textView4"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="35dp"
            android:text="邮箱：" />

        <EditText
            android:id="@+id/register_edit3"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/textView5"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入邮箱"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <Button
            android:id="@+id/register_btn_ma"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/register_edit3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="205dp"
            android:layout_marginTop="9dp"
            android:text="获取验证码" />

        <EditText
            android:id="@+id/register_edit4"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_edit3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="41dp"
            android:layout_toEndOf="@+id/textView6"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="88dp"
            android:text="邮箱验证码：" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="33dp"
            android:text="手机号：" />

        <EditText
            android:id="@+id/register_edit5"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_edit4"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="42dp"
            android:layout_toEndOf="@+id/textView7"
            android:background="@drawable/login"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPersonName"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/register_img"
            android:layout_width="155dp"
            android:layout_height="56dp"
            android:layout_below="@+id/register_edit5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/register_tv_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_edit5"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/register_img"
            android:text="看不清？换一张"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="100dp"
            android:text="验证码：" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="460dp"
            android:background="#DDDDDD" />

    </RelativeLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="378dp"
        android:layout_height="60dp"
        android:layout_below="@+id/register_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="14dp"
        android:background="#FF0000"
        android:text="注册"
        android:textColor="#FFFFFF" />

</RelativeLayout>